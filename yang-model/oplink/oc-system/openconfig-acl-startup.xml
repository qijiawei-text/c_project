<acl xmlns= "http://openconfig.net/yang/acl">
    <acl-sets>
        <acl-set>
            <name>internal-access</name>
            <type>ACL_IPV4</type>
            <config>
                <name>internal-access</name>
                <type>ACL_IPV4</type>
            </config>
            <acl-entries>
                <acl-entry>
                    <sequence-id>1</sequence-id>
                    <config>
                        <sequence-id>1</sequence-id>
                        <description>Root-Access-All</description>
                    </config>
                    <ipv4>
                        <config>
                            <source-address>127.0.0.1/32</source-address>
                        </config>
                    </ipv4>
                    <actions>
                        <config>
                            <forwarding-action>ACCEPT</forwarding-action>
                        </config>
                    </actions>
                </acl-entry>
                <acl-entry>
                    <sequence-id>2</sequence-id>
                    <config>
                        <sequence-id>2</sequence-id>
                        <description>Block-gNMI-Insecured</description>
                    </config>
                    <transport>
                        <config>
                            <destination-port>50052</destination-port>
                        </config>
                    </transport>
                    <actions>
                        <config>
                            <forwarding-action>DROP</forwarding-action>
                        </config>
                    </actions>
                </acl-entry>
                <acl-entry>
                    <sequence-id>3</sequence-id>
                    <config>
                        <sequence-id>3</sequence-id>
                        <description>Block-gNMI-Insecured</description>
                    </config>
                    <transport>
                        <config>
                            <destination-port>8080..8083</destination-port>
                        </config>
                    </transport>
                    <actions>
                        <config>
                            <forwarding-action>DROP</forwarding-action>
                        </config>
                    </actions>
                </acl-entry>
            </acl-entries>
        </acl-set>
        <acl-set>
            <name>internal-access</name>
            <type>ACL_IPV6</type>
            <config>
                <name>internal-access</name>
                <type>ACL_IPV6</type>
            </config>
            <acl-entries>
                <acl-entry>
                    <sequence-id>1</sequence-id>
                    <config>
                        <sequence-id>1</sequence-id>
                        <description>Root-Access-All</description>
                    </config>
                    <ipv6>
                        <config>
                            <source-address>::1/128</source-address>
                        </config>
                    </ipv6>
                    <actions>
                        <config>
                            <forwarding-action>ACCEPT</forwarding-action>
                        </config>
                    </actions>
                </acl-entry>
            </acl-entries>
        </acl-set>
        <acl-set>
            <name>user-defined</name>
            <type>ACL_IPV4</type>
            <config>
                <name>user-defined</name>
                <type>ACL_IPV4</type>
            </config>
            <acl-entries></acl-entries>
        </acl-set>
        <acl-set>
            <name>user-defined</name>
            <type>ACL_IPV6</type>
            <config>
                <name>user-defined</name>
                <type>ACL_IPV6</type>
            </config>
            <acl-entries></acl-entries>
        </acl-set>
    </acl-sets>
</acl>
